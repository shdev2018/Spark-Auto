@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details - '@Model.ServiceType.Name'</h2>
<br />
<div class="row background-white border">
    <div class="col-8">
        <form>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ServiceType.Name" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ServiceType.Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ServiceType.Price" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ServiceType.Price" class="form-control" disabled/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-2 text-center">
                    <a asp-page="Edit" asp-route-id="@Model.ServiceType.id" class="btn btn-primary form-control">Edit</a>
                </div>
                <div class="col-3 text-center">
                    <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
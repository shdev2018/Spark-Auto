@page
@model SparkAuto.Pages.Services.HistoryModel
@{
    ViewData["Title"] = "History";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container pt-4 pb-2 row">
    <div class="col-6">
        <h2 class="text-info py-2">Service History</h2>
    </div>
    <div class="col-3 offset-3 text-right py-2">
        <a asp-page="../Cars/Index" asp-route-userId="@Model.UserId" class="btn btn-outline-success form-control">Back To List</a>
    </div>
</div>

@if (Model.ServiceHeaders.Count == 0)
{
    <div class="background-white">
        <p>No Service record found...</p>
    </div>
}
else
{
    <div class="container background-white border">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container py-2">
                <div class="col-1 text-center pt-3 text-white-50">
                    <i class="fas fa-user fa-2x"></i>
                </div>
                <div class="col-5">
                    <label class="text-info">@Model.ServiceHeaders[0].Car.ApplicationUser.Name</label><br />
                    <label class="text-info">@Model.ServiceHeaders[0].Car.ApplicationUser.Email / @Model.ServiceHeaders[0].Car.ApplicationUser.PhoneNumber</label>
                </div>
                <div class="col-5 text-right">
                    <label class="text-info">@Model.ServiceHeaders[0].Car.Make @Model.ServiceHeaders[0].Car.Model @Model.ServiceHeaders[0].Car.Style</label><br />
                    <label class="text-info">@Model.ServiceHeaders[0].Car.Year </label>
                </div>
                <div class="col-1 text-center pt-3 text-white-50">
                    <i class="fas fa-car fa-2x"></i>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => Model.ServiceHeaders[0].Miles)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.ServiceHeaders[0].TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.ServiceHeaders[0].Details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.ServiceHeaders[0].MyProperty)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.ServiceHeaders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Miles)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Details)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.MyProperty)
                            </td>
                            <td>
                                <a asp-page="Details" class="btn btn-info form-control" asp-route-serviceId="@item.Id">
                                    <i class="fas fa-list-alt"></i> &nbsp; Details
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}  
@page
@model RegisterModel
@using SparkAuto.Utility
@{
    ViewData["Title"] = "Register";
}

<br />
<h2 class="text-info">Create New Account</h2>
<br />
<div class="row background-white border">
    <div class="col-9">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Name" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Name" class="form-control" autofocus />
                </div>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Email" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Phone" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Phone" class="form-control" autofocus />
                </div>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Address" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Address" class="form-control" />
                </div>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.City" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.City" class="form-control" autofocus />
                </div>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Postcode" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Postcode" class="form-control" />
                </div>
                <span asp-validation-for="Input.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Password" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.AdminEndUser))
            {
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.IsAdmin" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Input.IsAdmin" class="form-control" />
                </div>
            </div>
            }
            <div class="form-group row">
                <div class="col-3 offset-3 text-center">
                    <button type="submit" class="btn btn-primary form-control">Register!</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
